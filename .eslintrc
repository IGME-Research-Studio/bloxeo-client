{
  "extends": "airbnb/base",
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "rules": {
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "no-unused-vars": [2, {"args": "after-used", "argsIgnorePattern": "^__"}],
    "func-names": 0,
    "default-case": 1,
    "no-else-return": 0,
    "padded-blocks": 0,
    "max-len": [1, 80, 2],
    "new-cap": 0,
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/react-in-jsx-scope": 1
  },
  "ecmaFeatures": {
    "jsx": true
  }
}
